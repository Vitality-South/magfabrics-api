    <section class="w-full d-flex justify-content-center align-items-center">
      <div class="input-group mx-2" style="max-width: 300px">
        <input
          id="search-bar"
          type="text"
          class="form-control"
          placeholder="Search Name"
          aria-label="Search Name"
          aria-describedby="button-addon2"
        />
        <div
          id="search-results"
          class="card"
          style="
            position: absolute;
            top: 40px;
            left: 0px;
            width: 400px;
            z-index: 99;
            overflow-y: auto;
            max-height: 600px;
            display: none;
          "
        >
          <div id="search-results__body" class="card-body"></div>
        </div>
      </div>

      <div class="input-group mx-2" style="max-width: 300px">
        <input
          id="search-id-bar"
          type="text"
          class="form-control"
          placeholder="Search ID"
          aria-label="Search ID"
          aria-describedby="button-addon2"
        />
        <div
          id="search-results-id"
          class="card"
          style="
            position: absolute;
            top: 40px;
            left: 0px;
            width: 400px;
            z-index: 99;
            overflow-y: auto;
            max-height: 600px;
            display: none;
          "
        >
          <div id="search-results-id__body" class="card-body"></div>
        </div>
      </div>

      <div class="input-group mx-2" style="max-width: 300px">
        <input
          id="search-sku-bar"
          type="text"
          class="form-control"
          placeholder="Search SKU"
          aria-label="Search SKU"
          aria-describedby="button-addon2"
        />
        <div
          id="search-results-sku"
          class="card"
          style="
            position: absolute;
            top: 40px;
            left: 0px;
            width: 400px;
            z-index: 99;
            overflow-y: auto;
            max-height: 600px;
            display: none;
          "
        >
          <div id="search-results-sku__body" class="card-body"></div>
        </div>
      </div>

      <button
        id="cleaning-btn"
        data-bs-toggle="modal"
        data-bs-target="#exampleModal"
        class="btn-secondary btn mx-2"
      >
        Cleaning Codes
      </button>

      <button
        id="taxonomies-btn"
        data-bs-toggle="modal"
        data-bs-target="#exampleModal"
        class="btn-secondary btn mx-2"
      >
        Taxonomies
      </button>
    </section>

    <section
      id="fab-section"
      class="container-fluid p-5 d-flex flex-wrap justify-content-center"
    ></section>

    <!--Info Modal -->
    <div
      class="modal fade"
      id="exampleModal"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
          <div class="modal-header">
            <h1
              id="modal-title"
              class="modal-title fs-5"
              id="exampleModalLabel"
            >
              Modal title
            </h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div id="modal-body" class="modal-body">...</div>
        </div>
      </div>
    </div>

    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>

    <script
      src="magfabrics-1.5.16.min.js"
integrity="sha384-h5fKyF1jgDsxx9QoKHcZ+H/wjahlyl+EyYdHWPU+7CwNkNNOsufRg70rRps368OH"
    ></script>
    <script src="index.js"></script>
  </body>
</html>
